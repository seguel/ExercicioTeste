@model IEnumerable<ExercicioTesteClientes.Models.TBClientes>

@{
    ViewData["Title"] = "Exercicio Teste - Lista de Clientes";
}


<h2>Lista de Clientes</h2>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayName("Tipo")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipos.Tipo)
            </td>
            <td>                   
                @Html.DisplayFor(modelItem => item.Documento)
               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            
            <td>               
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
